rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        (request.auth.token.email == 'admin@example.com' ||
         request.auth.token.email == 'hosurtoppersacademy@gmail.com' ||
         request.auth.token.role == 'admin' || 
         request.auth.token.admin == true ||
         request.auth.uid == 'admin');
    }
    
    // Allow read access to courses and gallery for all users
    match /courses/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /gallery/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /toppers/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Students collection - admins can read all, students can read their own
    match /students/{document} {
      allow read: if isAdmin() || 
        (request.auth != null && 
         (request.auth.uid == document || request.auth.token.email != null));
      allow write: if isAdmin();
    }
    
    // Users collection - admins can read all for dashboard stats
    match /users/{userId} {
      allow read: if isAdmin() || 
        (request.auth != null && request.auth.uid == userId);
      allow write: if isAdmin() || 
        (request.auth != null && request.auth.uid == userId);
    }
    
    // Results collection - admins can read/write all, students can read
    match /results/{document} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Exam Results collection (for dashboard stats)
    match /examResults/{document} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Inquiries - allow creation by anyone, read by admins
    match /inquiries/{document} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }
    
    // Catch-all rule for any other collections (for development)
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
